<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/idCreer_une_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:padding="5dp"
        android:text="Créer une question"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idreponse"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="149dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Réponse correcte"
        app:layout_constraintBottom_toTopOf="@+id/idreponse2"
        app:layout_constraintEnd_toStartOf="@+id/idreponse3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idQuestion" />


    <EditText
        android:id="@+id/idreponse2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="151dp"
        android:layout_marginLeft="151dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Réponse"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout11"
        app:layout_constraintEnd_toStartOf="@+id/idreponse4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idreponse" />

    <EditText
        android:id="@+id/idreponse3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Réponse"
        app:layout_constraintBottom_toBottomOf="@+id/idreponse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idreponse"
        app:layout_constraintTop_toTopOf="@+id/idreponse" />

    <EditText
        android:id="@+id/idreponse4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Réponse"
        app:layout_constraintBottom_toBottomOf="@+id/idreponse2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idreponse2"
        app:layout_constraintTop_toTopOf="@+id/idreponse2" />

    <EditText
        android:id="@+id/idQuestion"
        android:layout_width="651dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Question"
        app:layout_constraintBottom_toTopOf="@+id/idreponse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="143dp"
        android:layout_height="95dp"
        android:layout_marginStart="281dp"
        android:layout_marginLeft="281dp"
        android:layout_marginEnd="286dp"
        android:layout_marginRight="286dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/idQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/idQuestion"
        app:layout_constraintTop_toBottomOf="@+id/idCreer_une_question">

        <RadioButton
            android:id="@+id/radioButtonLevel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trajet 1" />

        <RadioButton
            android:id="@+id/radioButtonLevel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trajet 2" />

        <RadioButton
            android:id="@+id/radioButtonLevel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trajet 3" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="262dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idreponse2">

        <Button
            android:id="@+id/idRetour"
            android:layout_width="120dp"
            android:layout_height="43dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/fileds"
            android:text="Retour" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/fileds"
            android:text="Sauvegarder"
            tools:text="Sauvegarder" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>